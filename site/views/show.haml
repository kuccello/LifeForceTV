  #content_wrap
    #inner_content


      .entry
        %img.show_poster{ :src => "/scripts/timthumb.php?src=#{show.poster}&amp;h=315&amp;w=560&amp;zc=1&amp;zw=560&amp;zh=170&amp;zow=0&amp;zoh=70", :alt => show.name }

        .title_holder
          %h1
            About
            = show.name



        .entry_content
          %p
            = show.description
        /
          END "entry_content"  //
      /
        END "entry"  //

      
      /
        A GALLERY?

      .entry

        .title_holder
          %h1
            Episode List
        /
          END "title_holder"  //
        .entry_content
          .episode_list
            - show_episodes.each do |episode|
              .episode_info
                %div{:style=>"min-height:55px"}
                  %a.mini_ep_link{:href=>episode.uri}
                    %div{:style=>"float:left;"}
                      %img{ :src => "/scripts/timthumb.php?src=#{episode.poster}&amp;h=90&amp;w=160&amp;zc=0", :alt => episode.name }
                    .episode_name
                      = episode.name
                    .episode_running_time
                      Running Time:
                      = episode.running_time
                    .episode_seq
                      Episode Number:
                      = episode.sequence_order
                    %p.episode_description
                      = episode.description['long'].content
                  %strong.credits_title
                    Credits:
                  %ul.credits_list
                  - episode.ordered_credits.each do |cr|
                    %li.credit_item
                      %div
                        = cr.name
                        ,
                        = cr.role
                        - if cr.image && cr.image.length > 0
                          %img{:src=>cr.image,:width=>"26"}
                        %p
                          = cr.desc

        /
          END "entry_content"  //
      /
        END "entry"  //


    #sidebar_home
      

      .widget
        %h3.widget_title
          Genre's
        .widget_content
          %ul
            - show.genera.each do |genera|
              %li
                %a{:href=>"/shows?genre=#{genera.pid}"}
                  = genera.name

      .widget
        %h3.widget_title
          Credits
        .widget_content
          - show.ordered_credits.each do |cr|
            .credit
              = cr.name
              \-
              = cr.role
              %p
                %em
                  = cr.desc
              - if cr.image && cr.image.length > 0
                %img{:src=>cr.image,:width=>"50px"}

