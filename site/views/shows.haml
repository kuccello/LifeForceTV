&nbsp;

#content_wrap
  #inner_content
    - shows.each do |show|
      = partial("showhighlight",{:show=>show})

    - if shows.size == 0
      %strong
        No Shows Found Matching Criteria

  #sidebar_home
    - if params[:genre] || params[:order] || params[:rating]
      .widget
        %h3.widget_title
          Filters
        .widget_content
          - if params[:genre]
            [
            %a{:href=>"/shows?#{params[:order] ? 'order='+params[:order] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
              X
            ] Remove genera filter
            %br
          - if params[:rating]
            [
            %a{:href=>"/shows?#{params[:order] ? 'order='+params[:order] : ''}#{params[:genre] ? '&genera='+params[:genre] : ''}"}
              X
            ] Remove rating filter
            %br
          - if params[:order]
            [
            %a{:href=>"/shows?#{params[:genre] ? 'genera='+params[:genre] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
              X
            ] Remove order filter

    .widget
      %h3.widget_title
        Genera Filter
      .widget_content
        %ul
          - generas.each do |genera|
            %li
              %a{:href=>"/shows?genre=#{genera.pid}#{params[:order] ? '&order='+params[:order] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
                = genera.name

    .widget
      %h3.widget_title
        Rating Filter
      .widget_content
        %ul
          %li
            %a{:href=>"/shows?rating=TV-C#{params[:order] ? '&order='+params[:order] : ''}#{params[:genre] ? '&genre='+params[:genre] : ''}"}
              TV-C
          %li
            %a{:href=>"/shows?rating=TV-8#{params[:order] ? '&order='+params[:order] : ''}#{params[:genre] ? '&genre='+params[:genre] : ''}"}
              TV-8
          %li
            %a{:href=>"/shows?rating=TV-G#{params[:order] ? '&order='+params[:order] : ''}#{params[:genre] ? '&genre='+params[:genre] : ''}"}
              TV-G
          %li
            %a{:href=>"/shows?rating=TV-PG#{params[:order] ? '&order='+params[:order] : ''}#{params[:genre] ? '&genre='+params[:genre] : ''}"}
              TV-PG
          %li
            %a{:href=>"/shows?rating=TV-14#{params[:order] ? '&order='+params[:order] : ''}#{params[:genre] ? '&genre='+params[:genre] : ''}"}
              TV-14
          %li
            %a{:href=>"/shows?rating=TV-18#{params[:order] ? '&order='+params[:order] : ''}#{params[:genre] ? '&genre='+params[:genre] : ''}"}
              TV-18


    .widget
      %h3.widget_title
        Sort Order
      .widget_content
        %ul

          %li
            %a{:href=>"/shows?order=ades#{params[:genre] ? '&genre='+params[:genre] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
              Alphabetical Descending
          %li
            %a{:href=>"/shows?order=aass#{params[:genre] ? '&genre='+params[:genre] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
              Alphabetical Assending
          %li
            %a{:href=>"/shows?order=nsf#{params[:genre] ? '&genre='+params[:genre] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
              Newest Show First
          %li
            %a{:href=>"/shows?order=nsl#{params[:genre] ? '&genre='+params[:genre] : ''}#{params[:rating] ? '&rating='+params[:rating] : ''}"}
              Newest Show Last

    .widget{:style=>"text-align:center;"}
      = haml :'snippets/sidebar_300x300', :layout=>false

    = haml :'snippets/recent_episodes2',:layout=>false

    .widget{:style=>"text-align:center;"}
      = haml :'snippets/sidebar_300x300', :layout=>false

  /
    END "sidebar_home"  //
/
  END "content_wrap"  //
