- showcase_episodes = default_showcase.sorted
- if showcase_episodes.size > 0
  #featured_home.clearfix
    .bigimg
      %img#slider_main_img{ :src => "/scripts/timthumb.php?src=#{(showcase_episodes.size > 0 ? showcase_episodes[0].ep.poster : '/images/img1.jpg')}&amp;h=518&amp;w=920&amp;zc=1&amp;zw=920&amp;zh=350&amp;zow=0&amp;zoh=84", :alt => showcase_episodes[0].ep.name }
      .post_info_holder.clearfix
        .post_category
          %a#slider_img_tit{ :href => showcase_episodes[0].ep.s.uri }
            \/
            = showcase_episodes[0].ep.s.name
            \/
        .post_name
          %a#slider_img_desc{ :href => showcase_episodes[0].ep.uri }
            = showcase_episodes[0].ep.name
        .post_category
          %a#slider_video{:href=>showcase_episodes[0].ep.hd_swf_url, :rel=>"shadowbox;width=715;height=405;player=swf"}
            \/ PLAY /
        /
          #post_details
            THis is some text
      /
        END "post_info_holder"  //
    /
      END "bigimg"  //
    #slider.slider
      #slider_max.minus
        %img#round_max.round{ :src => "/images/slider_round.png", :alt => "round" }
        %img#sign_max.sign{ :src => "/images/slider_round_minus.png", :alt => "minus" }
      #thumbs.thumbs
        #sl_content.slider_content
          %ul#slider_ul
            - showcase_episodes.each do |episode|
              %li
                %img{ :src => "/scripts/timthumb.php?src=#{episode.ep.poster}&amp;h=100&amp;w=52&amp;zc=0", :alt => episode.ep.name }
                %a.slider_tit{ :href => episode.ep.s.uri }
                  \/
                  = episode.ep.s.name 
                  \/
                %a.slider_desc{ :href => episode.ep.uri }
                  = episode.ep.name
                %a.slider_img{ :href => "/scripts/timthumb.php?src=#{episode.ep.poster}&amp;h=518&amp;w=920&amp;zc=1&amp;zw=920&amp;zh=350&amp;zow=0&amp;zoh=84" }
                %a.slider_swf{ :href => episode.ep.hd_swf_url, :rel=>"shadowbox;width=715;height=405;player=swf"}
                  \/ PLAY /
            %li

          /
            END "slider_ul"  //
        /
          END "sl_content"  //
      /
        END "thumbs"  //
      #slider_min.plus
        %img#round_min.round{ :src => "/images/slider_round.png", :alt => "round" }
        %img#sign_min.sign{ :src => "/images/slider_round_plus.png", :alt => "plus" }
      /
        END "slider_min"  //
    /
      END "slider"  //
  /
    END "featured_home"  //

  = partial("showshight")

- else

  = showcase_episodes.size
