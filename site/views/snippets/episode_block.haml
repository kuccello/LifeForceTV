.episode_info
  %div{:style=>"min-height:55px"}
    %a.mini_ep_link{:href=>episode.uri}
      %div{:style=>"float:left;"}
        %img{ :src => "/scripts/timthumb.php?src=#{episode.poster}&amp;h=90&amp;w=160&amp;zc=0", :alt => episode.name }
      .episode_name
        = episode.sequence_order
        \-
        = episode.name

      %p.episode_description
        = episode.description['long'].content
        [#{episode.running_time}]
    - if episode.ordered_cast.size > 0
      .ep_credits
        %strong.credits_title
          Credits:

        .cast_header
          Cast:
        %ul.credits_list
        - episode.ordered_cast.each do |cr|
          %li.credit_item
            %div
              = cr.name
              ,
              = cr.role
              - if cr.image && cr.image.length > 0
                %img{:src=>cr.image,:width=>"26"}
              %p
                = cr.desc
