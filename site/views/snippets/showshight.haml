  END "message_buttons"  //
#content_wrap
  #inner_content
    - showcase_shows = default_showcase.sorted_shows
    - showcase_shows.each do |show_showcase|
      = partial("showhighlight",{:show=>show_showcase.s})

    %a{:href=>"/shows"}
      Watch More Shows
  
  #sidebar_home
    - default_showcase.sorted_notes.each do |note|
      = partial("widgit",{:note=>note.n})

    .widget
      %h3.widget_title
        Most Recent Episodes
      .widget_content

        - [0,1,2].each do |idx|
          - episode = most_recent_episode(idx)
          - if episode
            .mre_ep
              %p.air_date{:style=>'text-align:center'}
                - ed = episode.released_date
                Air Date:
                = "#{ed.month_str} #{ed.day_of_month}, #{ed.year}"
              .mini_img_block{:style=>"text-align:center"}
                %a{ :href => episode.s.uri }
                  %div{:style=>"float:left;align:left"}
                    %img{ :src => "/scripts/timthumb.php?src=#{episode.s.poster}&amp;h=81&amp;w=155&amp;zc=0", :alt => episode.s.name }
                %a.mini_ep_link{:href=>episode.uri}
                  %div{:style=>"float:left;align:left;padding-left: 10px;"}
                    %img{ :src => "/scripts/timthumb.php?src=#{episode.poster}&amp;h=81&amp;w=155&amp;zc=0", :alt => episode.name }


              .ep_links{:style=>"clear:both;display:block;"}
                %p{:style=>'text-align:center'}
                  %a.mini_ep_link{:href=>episode.uri}
                    = episode.name




    .widget{:style=>"text-align:center;"}
      %img{:src=>"/images/ex_ad_300x300.jpg"}

  /
    END "sidebar_home"  //
/
  END "content_wrap"  //
